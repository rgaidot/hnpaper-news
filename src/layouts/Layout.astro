---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    
    <!-- Masthead Header -->
    <header class="border-b border-stone-300 bg-white py-6 shadow-sm sticky top-0 z-50 opacity-95 backdrop-blur">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 flex justify-between items-center">
        <a href="/" class="group">
          <h1 class="text-3xl sm:text-4xl font-black tracking-tighter text-stone-900 group-hover:text-blue-700 transition-colors">
            HNPaper<span class="text-blue-700">.</span>
          </h1>
          <span class="text-xs font-sans text-stone-500 font-medium tracking-widest uppercase">News Digest</span>
        </a>
        
        <nav>
          <a href="/news" class="text-sm font-semibold text-stone-600 hover:text-blue-700 transition-colors">
            Archives
          </a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow w-full max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-stone-100 border-t border-stone-200 mt-auto">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 text-center sm:flex sm:justify-between sm:items-center text-sm text-stone-500">
        <p>&copy; {new Date().getFullYear()} HNPaper News</p>
        <p class="mt-2 sm:mt-0">
          Source : <a href="https://hnpaper-labs.gaidot.net" target="_blank" class="text-stone-700 hover:text-blue-700 underline decoration-stone-300 underline-offset-2">HNPaper</a>
          by <a href="https://regis.gaidot.net" target="_blank" class="text-stone-700 hover:text-blue-700 underline decoration-stone-300 underline-offset-2">RÃ©gis Gaidot</a>
        </p>
      </div>
    </footer>

  </body>
</html>

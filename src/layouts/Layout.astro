---
import '../styles/global.css';
import { pwaInfo } from 'virtual:pwa-info';
import Search from '../components/Search.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <header class="w-full max-w-6xl mx-auto px-4 sm:px-6 pt-8 pb-6 text-center">
      <div class="border-b-4 border-stone-900 pb-2 mb-2">
        <h1
          class="font-serif text-5xl sm:text-7xl md:text-8xl font-black tracking-tighter text-stone-900 uppercase leading-none"
        >
          <a href="/" class="hover:text-stone-700 transition-colors"
            >The HNPaper</a
          >
        </h1>
      </div>
      <div
        class="border-b border-stone-900 border-t border-stone-900 py-2 flex justify-between items-center font-serif font-bold text-xs sm:text-sm uppercase tracking-widest text-stone-800"
      >
        <span
          >{
            new Date().toLocaleDateString("fr-FR", {
              weekday: "long",
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }</span
        >
        <div class="flex items-center gap-4">
          <Search />
          <span><a href="/news" class="hover:underline">Archives</a></span>
        </div>
      </div>
    </header>

    <main class="w-full max-w-6xl mx-auto px-4 sm:px-6 py-8">
      <slot />
    </main>

    <footer
      class="w-full max-w-6xl mx-auto px-4 sm:px-6 py-8 mt-12 border-t-4 border-stone-900"
    >
      <div class="text-center font-serif text-sm text-stone-600">
        <p class="mb-2">
          &copy; {new Date().getFullYear()} HNPaper News. Printed in the Cloud :-)
        </p>
        <p>
          Source : <a
            href="https://hnpaper-labs.gaidot.net"
            target="_blank"
            class="text-stone-900 hover:underline font-bold">HNPaper</a
          >
          &mdash; By <a
            href="https://regis.gaidot.net"
            target="_blank"
            class="text-stone-900 hover:underline font-bold">RÃ©gis Gaidot</a
          >
        </p>
      </div>
    </footer>

    <script>
      import { registerSW } from "virtual:pwa-register";
      registerSW({ immediate: true });
    </script>
  </body>
</html>
